{
  "name": "@ianwremmel/http-server-exceptions",
  "version": "0.0.0-development",
  "description": "Server-side exceptions and express middleware",
  "main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ianwremmel/http-server-exceptions.git"
  },
  "scripts": {
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "npm run --silent lint:js && npm run --silent lint:changelog && npm run --silent lint:deps",
    "lint:changelog": "commitlint --from origin/master --to HEAD",
    "eslint": "eslint --ignore --ignore-path .gitignore",
    "lint:js": "npm run --silent eslint -- .",
    "lint:deps": "npm run --silent lint:deps:missing && npm run --silent lint:deps:unused",
    "lint:deps:missing": "dependency-check package.json",
    "lint:deps:unused": "dependency-check package.json --unused --no-dev",
    "mocha-reporter-options": "[ -n \"${CI}\" ] && echo '--reporter xunit --reporter-options output=reports/junit/test.xml'",
    "test": "nyc --reporter=text mocha $(npm run --silent mocha-reporter-options) './src/**/*-spec.js' './test/integration/spec/**/*.js'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "engines": {},
  "keywords": [],
  "author": "Ian W. Remmel <design@ianwremmel.com>",
  "license": "MIT",
  "dependencies": {
    "@ianwremmel/exception": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@ianwremmel/eslint-config-standard": "^1.2.0",
    "@ianwremmel/eslint-plugin-ianwremmel": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.1.2",
    "condition-circle": "^2.0.0",
    "coveralls": "^3.0.2",
    "dependency-check": "^4.1.0",
    "ejs": "^3.0.1",
    "eslint": "^5.11.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-comments": "^1.0.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-markdown": "^1.0.0-rc.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "express": "^4.16.3",
    "husky": "^4.0.0",
    "lint-staged": "^9.0.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.15.3",
    "semantic-release": "^16.0.0",
    "supertest": "^4.0.1"
  },
  "lint-staged": {
    "*.js": "npm run eslint -- ",
    "bin/**": "npm run eslint -- "
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  }
}
